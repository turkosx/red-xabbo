<UserControl
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:ic="using:FluentIcons.Avalonia.Fluent"
  xmlns:v="using:Xabbo.Avalonia.Views"
  xmlns:vm="using:Xabbo.ViewModels"
  mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
  x:Class="Xabbo.Avalonia.Views.GameDataPage"
  x:DataType="vm:GameDataPageViewModel"
  Classes="pageRoot"
>
  <TabControl Padding="0,4,0,0">
    <TabItem>
      <TabItem.Header>
        <StackPanel Orientation="Horizontal" Spacing="4">
          <ic:SymbolIcon VerticalAlignment="Center" Symbol="Couch" />
          <TextBlock VerticalAlignment="Center" Text="{Binding [gameData.tab.furni]}" />
        </StackPanel>
      </TabItem.Header>
      <v:FurniDataView DataContext="{Binding FurniData}" />
    </TabItem>
    <TabItem>
      <TabItem.Header>
        <StackPanel Orientation="Horizontal" Spacing="4">
          <ic:SymbolIcon VerticalAlignment="Center" Symbol="Textbox" />
          <TextBlock VerticalAlignment="Center" Text="{Binding [gameData.tab.texts]}" />
        </StackPanel>
      </TabItem.Header>
      <v:KeyValueListView DataContext="{Binding Texts}" />
    </TabItem>
    <TabItem>
      <TabItem.Header>
        <StackPanel Orientation="Horizontal" Spacing="4">
          <ic:SymbolIcon VerticalAlignment="Center" Symbol="BracesVariable" />
          <TextBlock VerticalAlignment="Center" Text="{Binding [gameData.tab.variables]}" />
        </StackPanel>
      </TabItem.Header>
      <v:KeyValueListView DataContext="{Binding Variables}" />
    </TabItem>
  </TabControl>
</UserControl>
