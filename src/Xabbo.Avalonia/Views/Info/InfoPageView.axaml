<UserControl
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:vm="using:Xabbo.ViewModels"
  mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
  x:Class="Xabbo.Avalonia.Views.InfoPageView"
  x:Name="InfoPageRoot"
  x:DataType="vm:InfoPageViewModel"
  Classes="pageRoot"
>
  <ScrollViewer Classes="pageScroll">
    <StackPanel Margin="20" Spacing="12" MaxWidth="920" HorizontalAlignment="Center">
      <StackPanel.Styles>
        <Style Selector="TextBlock">
          <Setter Property="TextAlignment" Value="Center" />
          <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
        <Style Selector="TextBlock.muted">
          <Setter Property="Opacity" Value="0.8" />
        </Style>
        <Style Selector="TextBlock.sectionHeader">
          <Setter Property="FontSize" Value="18" />
          <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        <Style Selector="TextBlock.versionLabel">
          <Setter Property="FontFamily" Value="{DynamicResource Mono}" />
          <Setter Property="FontSize" Value="18" />
        </Style>
        <Style Selector="Border.creditListCard">
          <Setter Property="Background" Value="{DynamicResource PremiumChromeGradientBrush}" />
          <Setter Property="BorderBrush" Value="#6BE96A70" />
          <Setter Property="BorderThickness" Value="1" />
          <Setter Property="CornerRadius" Value="12" />
          <Setter Property="Padding" Value="10,8" />
          <Setter Property="MaxWidth" Value="760" />
          <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
        <Style Selector="Border.creditListCard:pointerover">
          <Setter Property="BorderBrush" Value="{DynamicResource AccentFillColorDefaultBrush}" />
        </Style>
        <Style Selector="Grid.creditRow">
          <Setter Property="Margin" Value="0,4" />
        </Style>
        <Style Selector="TextBlock.creditPill">
          <Setter Property="FontFamily" Value="{DynamicResource Mono}" />
          <Setter Property="FontSize" Value="11" />
          <Setter Property="TextAlignment" Value="Left" />
          <Setter Property="Opacity" Value="0.85" />
        </Style>
        <Style Selector="TextBlock.creditTitle">
          <Setter Property="FontSize" Value="15" />
          <Setter Property="FontWeight" Value="SemiBold" />
          <Setter Property="TextAlignment" Value="Left" />
        </Style>
        <Style Selector="TextBlock.creditDescription">
          <Setter Property="FontSize" Value="12" />
          <Setter Property="TextAlignment" Value="Left" />
        </Style>
        <Style Selector="Button.creditLink">
          <Setter Property="HorizontalAlignment" Value="Right" />
          <Setter Property="VerticalAlignment" Value="Center" />
          <Setter Property="Padding" Value="0" />
          <Setter Property="FontSize" Value="12" />
        </Style>
      </StackPanel.Styles>

      <Border Classes="card" Padding="24,20">
        <StackPanel Spacing="8" HorizontalAlignment="Center">
          <Image
            Width="220"
            Height="220"
            Source="avares://Xabbo.Avalonia/Assets/xabbo-skull-hd-crop.png"
            RenderOptions.BitmapInterpolationMode="HighQuality"
          />
          <TextBlock FontSize="34" FontWeight="SemiBold" Text="{Binding AppName}" />
          <TextBlock Classes="muted" FontSize="15" Text="{Binding [info.tagline]}" />
          <TextBlock Classes="versionLabel" Text="{Binding Version}" />
          <StackPanel Orientation="Horizontal" Spacing="6" HorizontalAlignment="Center">
            <TextBlock Text="{Binding [info.developedBy]}" />
            <Button
              Classes="link"
              Command="{Binding #InfoPageRoot.OpenUrlCmd}"
              CommandParameter="{Binding DeveloperUrl}"
            >
              <TextBlock FontWeight="Bold" Text="{Binding DeveloperTag}" />
            </Button>
          </StackPanel>
        </StackPanel>
      </Border>

      <Grid ColumnDefinitions="*,*">
        <Border Grid.Column="0" Classes="card" Padding="14,12" Margin="0,0,6,0">
          <StackPanel Spacing="6">
            <TextBlock Classes="muted" Text="{Binding [info.project]}" />
            <TextBlock FontSize="24" FontWeight="SemiBold" Text="{Binding ProjectName}" />
            <Button
              Classes="link"
              HorizontalAlignment="Center"
              Command="{Binding #InfoPageRoot.OpenUrlCmd}"
              CommandParameter="{Binding RepositoryUrl}"
            >
              <TextBlock Text="{Binding RepositoryDisplay}" />
            </Button>
          </StackPanel>
        </Border>

        <Border Grid.Column="1" Classes="card" Padding="14,12" Margin="6,0,0,0">
          <StackPanel Spacing="6">
            <TextBlock Classes="muted" Text="{Binding [info.version]}" />
            <TextBlock Classes="versionLabel" FontSize="24" FontWeight="SemiBold" Text="{Binding Version}" />
            <TextBlock Classes="muted" FontSize="14" Text="{Binding [info.versionNote]}" />
          </StackPanel>
        </Border>
      </Grid>

      <Border Classes="card" Padding="16,14">
        <StackPanel Spacing="8">
          <TextBlock Classes="sectionHeader" Text="{Binding [info.links]}" />
          <Grid ColumnDefinitions="*,*">
            <Button
              Grid.Column="0"
              Classes="link"
              Margin="0,0,6,0"
              Command="{Binding #InfoPageRoot.OpenUrlCmd}"
              CommandParameter="{Binding RepositoryUrl}"
            >
              <TextBlock Text="{Binding [info.links.github]}" />
            </Button>
            <Button
              Grid.Column="1"
              Classes="link"
              Margin="6,0,0,0"
              Command="{Binding #InfoPageRoot.OpenUrlCmd}"
              CommandParameter="{Binding IssuesUrl}"
            >
              <TextBlock Text="{Binding [info.links.issues]}" />
            </Button>
          </Grid>
        </StackPanel>
      </Border>

      <Border Classes="card" Padding="16,14">
        <StackPanel Spacing="10">
          <TextBlock Classes="sectionHeader" Text="{Binding [info.credits]}" />
          <TextBlock Classes="muted" Text="{Binding [info.credits.note]}" />
          <Border Classes="creditListCard">
            <StackPanel>
              <Grid Classes="creditRow" ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Spacing="2" Margin="0,0,10,0">
                  <TextBlock Classes="creditPill" Text="{Binding [info.credits.api.pill]}" />
                  <TextBlock Classes="creditTitle" Text="{Binding [info.credits.api.title]}" />
                  <TextBlock Classes="creditDescription muted" Text="{Binding [info.credits.api.description]}" />
                </StackPanel>
                <Button
                  Grid.Column="1"
                  Classes="link creditLink"
                  Command="{Binding #InfoPageRoot.OpenUrlCmd}"
                  CommandParameter="{Binding CreditApiUrl}"
                >
                  <TextBlock Text="{Binding CreditApiDisplay}" />
                </Button>
              </Grid>

              <Separator Margin="0,2" />

              <Grid Classes="creditRow" ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Spacing="2" Margin="0,0,10,0">
                  <TextBlock Classes="creditPill" Text="{Binding [info.credits.b7c.pill]}" />
                  <TextBlock Classes="creditTitle" Text="{Binding [info.credits.b7c.title]}" />
                  <TextBlock Classes="creditDescription muted" Text="{Binding [info.credits.b7c.description]}" />
                </StackPanel>
                <Button
                  Grid.Column="1"
                  Classes="link creditLink"
                  Command="{Binding #InfoPageRoot.OpenUrlCmd}"
                  CommandParameter="{Binding CreditB7cUrl}"
                >
                  <TextBlock Text="{Binding CreditB7cDisplay}" />
                </Button>
              </Grid>

              <Separator Margin="0,2" />

              <Grid Classes="creditRow" ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Spacing="2" Margin="0,0,10,0">
                  <TextBlock Classes="creditPill" Text="{Binding [info.credits.qdaves.pill]}" />
                  <TextBlock Classes="creditTitle" Text="{Binding [info.credits.qdaves.title]}" />
                  <TextBlock Classes="creditDescription muted" Text="{Binding [info.credits.qdaves.description]}" />
                </StackPanel>
                <Button
                  Grid.Column="1"
                  Classes="link creditLink"
                  Command="{Binding #InfoPageRoot.OpenUrlCmd}"
                  CommandParameter="{Binding CreditQDavesUrl}"
                >
                  <TextBlock Text="{Binding CreditQDavesDisplay}" />
                </Button>
              </Grid>

              <Separator Margin="0,2" />

              <Grid Classes="creditRow" ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Spacing="2" Margin="0,0,10,0">
                  <TextBlock Classes="creditPill" Text="{Binding [info.credits.forks.pill]}" />
                  <TextBlock Classes="creditTitle" Text="{Binding [info.credits.forks.title]}" />
                  <TextBlock Classes="creditDescription muted" Text="{Binding [info.credits.forks.description]}" />
                </StackPanel>
                <Button
                  Grid.Column="1"
                  Classes="link creditLink"
                  Command="{Binding #InfoPageRoot.OpenUrlCmd}"
                  CommandParameter="{Binding CreditForksUrl}"
                >
                  <TextBlock Text="{Binding CreditForksDisplay}" />
                </Button>
              </Grid>

              <Separator Margin="0,2" />

              <Grid Classes="creditRow" ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Spacing="2" Margin="0,0,10,0">
                  <TextBlock Classes="creditPill" Text="{Binding [info.credits.discord.pill]}" />
                  <TextBlock Classes="creditTitle" Text="{Binding [info.credits.discord.title]}" />
                  <TextBlock Classes="creditDescription muted" Text="{Binding [info.credits.discord.description]}" />
                </StackPanel>
                <Button
                  Grid.Column="1"
                  Classes="link creditLink"
                  Command="{Binding #InfoPageRoot.OpenUrlCmd}"
                  CommandParameter="{Binding CreditCommunityUrl}"
                >
                  <TextBlock Text="{Binding CreditCommunityDisplay}" />
                </Button>
              </Grid>
            </StackPanel>
          </Border>
        </StackPanel>
      </Border>

      <Border Classes="card" Padding="16,14">
        <StackPanel Spacing="10">
          <TextBlock Classes="sectionHeader" Text="{Binding [info.poweredBy]}" />
          <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
            <Border Grid.Row="0" Grid.Column="0" Classes="card" Padding="12,10" Margin="0,0,5,5">
              <StackPanel Spacing="2">
                <Button
                  Classes="link"
                  HorizontalAlignment="Center"
                  Content="{Binding [info.framework.common]}"
                  Command="{Binding #InfoPageRoot.OpenUrlCmd}"
                  CommandParameter="https://github.com/xabbo/common"
                />
                <TextBlock FontFamily="{DynamicResource Mono}" Text="{Binding XabboCommonVersion}" />
              </StackPanel>
            </Border>

            <Border Grid.Row="0" Grid.Column="1" Classes="card" Padding="12,10" Margin="5,0,0,5">
              <StackPanel Spacing="2">
                <Button
                  Classes="link"
                  HorizontalAlignment="Center"
                  Content="{Binding [info.framework.messages]}"
                  Command="{Binding #InfoPageRoot.OpenUrlCmd}"
                  CommandParameter="https://github.com/xabbo/messages"
                />
                <TextBlock FontFamily="{DynamicResource Mono}" Text="{Binding XabboMessagesVersion}" />
              </StackPanel>
            </Border>

            <Border Grid.Row="1" Grid.Column="0" Classes="card" Padding="12,10" Margin="0,5,5,0">
              <StackPanel Spacing="2">
                <Button
                  Classes="link"
                  HorizontalAlignment="Center"
                  Content="{Binding [info.framework.gearth]}"
                  Command="{Binding #InfoPageRoot.OpenUrlCmd}"
                  CommandParameter="https://github.com/xabbo/gearth"
                />
                <TextBlock FontFamily="{DynamicResource Mono}" Text="{Binding XabboGEarthVersion}" />
              </StackPanel>
            </Border>

            <Border Grid.Row="1" Grid.Column="1" Classes="card" Padding="12,10" Margin="5,5,0,0">
              <StackPanel Spacing="2">
                <Button
                  Classes="link"
                  HorizontalAlignment="Center"
                  Content="{Binding [info.framework.core]}"
                  Command="{Binding #InfoPageRoot.OpenUrlCmd}"
                  CommandParameter="https://github.com/xabbo/core"
                />
                <TextBlock FontFamily="{DynamicResource Mono}" Text="{Binding XabboCoreVersion}" />
              </StackPanel>
            </Border>
          </Grid>
        </StackPanel>
      </Border>
    </StackPanel>
  </ScrollViewer>
</UserControl>
